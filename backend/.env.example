# Database Configuration
# Railway автоматически предоставит DATABASE_URL при подключении PostgreSQL
# Но если нужны отдельные параметры:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketing_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Для Railway используйте:
# DATABASE_URL=postgresql://user:password@host:port/database

# Server Configuration
PORT=5001
NODE_ENV=production

# VK API Configuration
VK_APP_ID=54125757
VK_APP_SECRET=your_vk_app_secret_from_vk_manager

# VK OAuth Configuration
# ВАЖНО: Обновите после деплоя frontend!
VK_REDIRECT_URI=https://your-frontend-app.up.railway.app/auth/vk/callback

# Callback API Configuration
# ВАЖНО: Обновите после получения backend URL на Railway!
CALLBACK_URL=https://your-backend-app.up.railway.app/vk/callback

# OpenAI Configuration (опционально, для GPT автоответов)
OPENAI_API_KEY=your_openai_api_key

# Frontend URL для CORS
# ВАЖНО: Обновите после деплоя frontend!
FRONTEND_URL=https://your-frontend-app.up.railway.app
